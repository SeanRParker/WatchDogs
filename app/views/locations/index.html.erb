 <div class="container min-height">
  <div>
    <h5 style="color: white; text-align: center;">Search animal shelters here, or search what you feel</h5>
    <br/>
    <br/>
    <br/>
    <div class="col s12 m12"> 
      <%=render(partial: 'form')%>
    </div>      
  </div>
  <div class="row">
    <div class="col s12 m6">
      <% if @yelp_results %>
      <div id="map" class="col s12" style='height: 600px;'></div>
      <% end %> 
    </div>
    <div class="col s12 m6" style="text-align: center;">
      <% if @yelp_results %>
        <% @yelp_results.businesses.each do |yelp| %>
        <div>
          <p><b>Shelter: </b><%= yelp.name %></p>
          <p><b>Rating: </b><%= yelp.rating %></p>
          <p><b>Category: </b><%= yelp.categories.map { |a| a.first  }.join(" / ") %></p>
          <p><b>Address: </b><%= yelp.location.display_address.first %></p>
          <p><%= yelp.location.display_address.last %></p>
          <p><b>Contact Number: </b><%= number_to_phone(yelp.phone) %></p>
          <p><a class="site-link" target="_blank" href="<%= yelp.mobile_url %>">CLICK HERE FOR SITE LINK</a></p>
          <hr/>
        </div>
      <% end %>
    </div>
  </div> 
 <hr/>
 
 <% end %>
 <% if @hash %>
   <script src="//maps.google.com/maps/api/js?v=3.23&key=AIzaSyAsyRRAL--yaE1kuFxFSN_esSKN-i2mK84"></script>
   <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
   <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
   <script>
     var marker_info = <%= raw @hash.to_json %>
     console.log(marker_info)
     handler = Gmaps.build('Google');
     handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
       var markers = handler.addMarkers(marker_info);
       handler.bounds.extendWith(markers);
       handler.fitMapToBounds();
     });
  </script>
<% end %>