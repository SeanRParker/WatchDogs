<div class="form-group">
  <%= form_tag search_path, :method => 'get' do %>
  <div class="form-group">
    <%= text_field_tag :term, params[:term], required: true, placeholder: 'Places', class: "form-control" %>
    <%= text_field_tag :location, params[:location], required: true, placeholder: 'City, Zip, or State', class: "form-control" %>
    <%= submit_tag "Search", :name => nil, class: "btn btn-default"%>
    <class="yelp">powered by <%= image_tag "https://s3-media2.fl.yelpcdn.com/assets/srv0/developer_pages/55e2efe681ed/assets/img/yelp_logo_50x25.png" %>
</div>
	<% end %>