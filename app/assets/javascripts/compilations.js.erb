$(document).ready(function() {
  // Initialize collapse button
  $('.button-collapse').sideNav({
    menuWidth: 325, // Default is 240
    edge: 'right', // Choose the horizontal origin
    closeOnClick: true // Closes side-nav on <a> clicks, useful for Angular/Meteor
  });

  if (window.location.pathname == '/') {
    $('body').css('background', <%= "\'#000000 url(\"#{image_url('watchdog-home.jpg')}\") no-repeat\'" %>),
    $('body').css('background-size', '100%'),
    $('.mdi-navigation-menu').css('color', 'black')
  };

  if(window.location.pathname == '/dogs/index') {
    $('.mdi-navigation-menu').css('color', 'white')
  }

  // Smooth scroll

  $('.scrollspy').scrollSpy({
    offset: 1000
  });



  $('select').material_select();

  // Initialize collapsible (uncomment the line below if you use the dropdown variation)
  //$('.collapsible').collapsible();
