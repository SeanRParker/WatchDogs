<div class="container center search-dogs">
  <h2 class="search-header">Find a dog at your local shelter</h2>

  <div class="row">
    <form class="col s12" method="POST" action="/dogs/show">
      <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
      <div class="row">

        <div class="input-field col s4">
          <input placeholder="Enter Zip Code, City, OR State" id="location" type="text" class="validate" required=true name="location">
          <label for="location">Enter your Location:</label>
        </div>

        <div class="input-field col s4">
          <input placeholder="Enter desired breed" id="breed" type="text" class="validate" name="breed">
          <label for="breed">Dog Breed:</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12 m4">
          <select name="sex">
            <option value="" disabled selected>No Preference</option>
            <option value="M">Male</option>
            <option value="F">Female</option>
          </select>
          <label>Dog Gender:</label>
        </div>

        <div class="input-field col s12 m4">
          <select name="size">
            <option value="" disabled selected>No Preference</option>
            <option value="S">Small</option>
            <option value="M">Medium</option>
            <option value="L">Large</option>
            <option value="XL">Extra-Large</option>
          </select>
          <label>Dog Size:</label>
        </div>

        <div class="input-field col s12 m4">
          <select name="age">
            <option value="" disabled selected>Age:</option>
            <option value="Baby">Baby (0-6 months )</option>
            <option value="Young">Young (.5-3 Years)</option>
            <option value="Adult">Adult (3-8 Years)</option>
            <option value="Senior">Senior (8+ years)</option>
          </select>
          <label>Dog Age:</label>
        </div>
      </div>
      <button type="submit" class="btn-dogs waves-effect wave-light btn-large" >Submit</button>
    </form>
  </div>
</div>



